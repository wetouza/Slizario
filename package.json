{
  "name": "slizario-clone",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "client": "vite client --host 0.0.0.0",
    "server": "tsx watch server/index.ts",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build client",
    "build:server": "tsc -p tsconfig.server.json",
    "start": "node dist/server/server/standalone.js"
  },
  "dependencies": {
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "concurrently": "^8.2.2",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2",
    "vite": "^5.0.6"
  },
  "engines": {
    "node": ">=18"
  }
}
